{
    "$schema": "./node_modules/nx/schemas/nx-schema.json",
    "npmScope": "scrapoxy",
    "tasksRunnerOptions": {
        "default": {
            "runner": "nx/tasks-runners/default",
            "options": {
                "cacheableOperations": [
                    "build",
                    "lint",
                    "lint-styles",
                    "lint-html"
                ],
                "useDaemonProcess": false
            }
        }
    },
    "targetDefaults": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "inputs": [
                "production",
                "^production"
            ]
        },
        "docker-build": {
            "dependsOn": [
                "build"
            ]
        },
        "test": {
            "inputs": [
                "default",
                "^production",
                "{workspaceRoot}/jest.preset.js"
            ]
        },
        "test-connector": {
            "inputs": [
                "default",
                "^production",
                "{workspaceRoot}/jest.preset.js"
            ]
        },
        "lint": {
            "dependsOn": [
                "lint-styles",
                "lint-html"
            ],
            "inputs": [
                "default",
                "{workspaceRoot}/.eslintrc.json"
            ]
        }
    },
    "namedInputs": {
        "default": [
            "{projectRoot}/**/*",
            "sharedGlobals"
        ],
        "production": [
            "default",
            "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
            "!{projectRoot}/tsconfig.spec.json",
            "!{projectRoot}/jest.config.[jt]s",
            "!{projectRoot}/.eslintrc.json"
        ],
        "sharedGlobals": []
    },
    "pluginsConfig": {
        "@nx/js": {
            "analyzeSourceFiles": true
        }
    }
}
