{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "lib": [
            "es2020",
            "dom"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "paths": {
            "@scrapoxy/auth-github": [
                "packages/auths/github/src/index.ts"
            ],
            "@scrapoxy/auth-google": [
                "packages/auths/google/src/index.ts"
            ],
            "@scrapoxy/auth-local": [
                "packages/auths/local/src/index.ts"
            ],
            "@scrapoxy/backend-sdk": [
                "packages/backend/sdk/src/index.ts"
            ],
            "@scrapoxy/backend-test-sdk": [
                "packages/backend/test-sdk/src/index.ts"
            ],
            "@scrapoxy/common": [
                "packages/common/src/index.ts"
            ],
            "@scrapoxy/frontend-sdk": [
                "packages/frontend/sdk/src/index.ts"
            ],
            "@scrapoxy/proxy-sdk": [
                "packages/proxy/sdk/src/index.ts"
            ]
        },
        "rootDir": ".",
        "sourceMap": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "strict": true,
        "strictNullChecks": true,
        "target": "es2022",
        "verbatimModuleSyntax": true
    },
    "exclude": [
        "node_modules",
        "tmp"
    ]
}
