{
    "name": "connector-nimbleway-frontend",
    "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
    "root": "packages/connectors/nimbleway/frontend",
    "sourceRoot": "packages/connectors/nimbleway/frontend/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nx/webpack:webpack",
            "outputs": [
                "{options.outputPath}"
            ],
            "options": {
                "target": "node",
                "compiler": "tsc",
                "outputPath": "dist/test/connectors-nimbleway-frontend",
                "main": "packages/connectors/nimbleway/frontend/src/index.ts",
                "tsConfig": "packages/connectors/nimbleway/frontend/tsconfig.lib.json",
                "isolatedConfig": true,
                "webpackConfig": "packages/connectors/nimbleway/frontend/webpack.config.js"
            }
        },
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": [
                "{options.outputFile}"
            ],
            "options": {
                "lintFilePatterns": [
                    "packages/connectors/nimbleway/frontend/**/*.ts"
                ],
                "fix": true
            }
        },
        "lint-styles": {
            "executor": "nx:run-commands",
            "options": {
                "command": "npx stylelint --aei --fix packages/connectors/nimbleway/frontend/src/**/{*,*.*}.scss"
            }
        },
        "lint-html": {
            "executor": "nx:run-commands",
            "options": {
                "command": "npx prettier --write --loglevel warn packages/connectors/nimbleway/frontend/src/**/{*,*.*}.html"
            }
        }
    },
    "tags": []
}
