{
    "name": "auth-local",
    "$schema": "../../../node_modules/nx/schemas/project-schema.json",
    "root": "packages/auths/local",
    "sourceRoot": "packages/auths/local/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nx/webpack:webpack",
            "outputs": [
                "{options.outputPath}"
            ],
            "options": {
                "target": "node",
                "compiler": "tsc",
                "outputPath": "dist/test/auths-local",
                "main": "packages/auths/local/src/index.ts",
                "tsConfig": "packages/auths/local/tsconfig.spec.json",
                "isolatedConfig": true,
                "webpackConfig": "packages/auths/local/webpack.config.js"
            }
        },
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": [
                "{options.outputFile}"
            ],
            "options": {
                "lintFilePatterns": [
                    "packages/auths/local/**/*.ts"
                ],
                "fix": true
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": [
                "{workspaceRoot}/coverage/{projectRoot}"
            ],
            "options": {
                "jestConfig": "packages/auths/local/jest.config.ts",
                "passWithNoTests": true,
                "runInBand": true
            }
        }
    },
    "tags": []
}
